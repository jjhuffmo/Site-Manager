<Window x:Class="Site_Manager.dlgLogin"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Site_Manager"
        mc:Ignorable="d"
        Title="User Login" Height="220" Width="581"
        WindowStartupLocation="CenterScreen"
        ShowInTaskbar="False">
    <Grid>
        <TextBox x:Name="uiUserName" HorizontalAlignment="Center" Height="33" Margin="21,38,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="480" FontWeight="Bold" FontSize="14" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
        <Button x:Name="btnLogin" Content="Login" HorizontalAlignment="Left" Height="74" Margin="61,101,0,0" VerticalAlignment="Top" Width="139" FontSize="16" FontWeight="Bold" Click="btnLogin_Clicked" IsEnabled="False"/>
        <Button x:Name="btnCancel" Content="Cancel" HorizontalAlignment="Left" Height="74" Margin="403,101,0,0" VerticalAlignment="Top" Width="138" FontSize="16" FontWeight="Bold" Click="btnCancel_Clicked"/>

    </Grid>


</Window>
